{{>layout/header}}

<h1>수식 채점 시스템</h1>
<div class="col-md-12">
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <label for="author"> 작성자 </label>
        <input type="text" class="form-control" id="author" value="{{loginUserName}}" readonly>
      </div>
      <div class="form-group">
        <label for="mathExpression">수식</label>
        <input type="text" class="form-control" id="mathExpression"
               placeholder="(1 * 3 = 3 <- 위와 같은 식으로 작성)">
      </div>
    </form>
    <a href="/maths" role="button" class="btn btn-secondary">취소</a>
    <button type="button" class="btn btn-primary" id="btn-check-math">채점 요청</button>
  </div>
</div>


{{>layout/footer}}